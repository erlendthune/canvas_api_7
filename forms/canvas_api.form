<?php

function canvas_api_form($form,$form_state){ 
    
    $form['canvas_api_institution'] = array(
      '#type' => 'textfield',
      '#title' => t('Institution'),
      '#description' => 'Enter your institution\'s name as it appears in your Canvas URL. <br>i.e. https://<strong>your-institutions-name</strong>.instructure.com',
      '#default_value' => variable_get('canvas_api_institution'),
    );

    $form['canvas_api_environment'] = array(
      '#type' => 'radios',
      '#title' => t('Environment'),
      '#options' => array(
        'test' => 'Test',
        'beta' => 'Beta',
        'production' => 'Production',
      ),
      '#default_value' => variable_get('canvas_api_environment'),
    );
    $form['canvas_api_token'] = array(
      '#type' => 'textfield',
      '#title' => t('Token'),
      '#description' => 'Enter you Canvas access token.',
      '#default_value' => variable_get('canvas_api_token'),
    ); 
    
  return system_settings_form($form);
}